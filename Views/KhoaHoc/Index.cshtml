
@{
    ViewBag.Title = "Khóa học";
    List<Course> courses = ViewBag.courses;
}
<div class="container" style="margin-top:20px">
@{
    for (int i = 0; i < courses.Count; i++)
    {
        Course c = courses.ElementAt(i);
        <a href="/Khoahoc/@c.id">

            <h3 style="margin-bottom: 20px;margin-top: 0px;font-weight: 600;color:#f47a22;text-decoration:none;">
                <i>@(i + 1).@c.name</i>
            </h3>

            <div style="margin-left:10%;margin-right:10%">
                <img alt="@c.name" src="@c.picture" style="width:100%;height:auto" />
            </div>
        </a>
    }
}


</div>